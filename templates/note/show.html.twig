{% extends 'base.html.twig' %}

{% block title %}Détails de la Note{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Détails de la Note</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">Informations détaillées sur la note</p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
                <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
                    <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">Étudiant</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            {{ note.etudiant.matriculeStudent }} - {{ note.etudiant.noms }} {{ note.etudiant.prenoms }}
                        </dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Évaluation</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ note.evaluation.titre }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Programme</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ note.programme.matiere.libelle }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Note</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ note.valeur }}/20</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Statut</dt>
                        <dd class="mt-1 text-sm">
                            {% if note.statut == 'en_attente' %}
                                <span class="inline-flex rounded-full bg-yellow-100 px-2 text-xs font-semibold leading-5 text-yellow-800">
                                    En attente
                                </span>
                            {% elseif note.statut == 'validee' %}
                                <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">
                                    Validée
                                </span>
                            {% else %}
                                <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">
                                    En révision
                                </span>
                            {% endif %}
                        </dd>
                    </div>
                    {% if note.commentaire %}
                        <div class="sm:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">Commentaire</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ note.commentaire }}</dd>
                        </div>
                    {% endif %}
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Créé par</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ note.createdBy }} le {{ note.createdAt|date('d/m/Y H:i') }}</dd>
                    </div>
                    {% if note.updatedBy %}
                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-500">Dernière modification</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ note.updatedBy }} le {{ note.updatedAt|date('d/m/Y H:i') }}</dd>
                        </div>
                    {% endif %}
                </dl>
            </div>
        </div>

        <div class="mt-6 flex space-x-3">
            <a href="{{ path('app_note_edit', {'id': note.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Modifier
            </a>
            <a href="{{ path('app_note_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
