{% extends 'base.html.twig' %}

{% block title %}{{ 'form.departement.title.edit'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'components/_datepicker.html.twig' %}
    <style>
        .flatpickr-calendar {
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border: 1px solid #e5e7eb;
        }
        .flatpickr-current-month {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1f2937;
        }
        .flatpickr-day.selected {
            background: #4f46e5;
            border-color: #4f46e5;
        }
        .flatpickr-day:hover {
            background: #f3f4f6;
        }
        .flatpickr-day.today {
            border-color: #4f46e5;
        }
        .flatpickr-monthSelect-month {
            padding: 0.5rem;
            margin: 0.2rem;
            border-radius: 0.375rem;
        }
        .flatpickr-monthSelect-month.selected {
            background: #4f46e5;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="flex flex-col lg:ml-4 transition-all duration-300">
        <div class="container p-4">
            <div class="max-w-lg mx-auto lg:mx-0">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <div class="flex items-center space-x-3 mb-6 pb-4 border-b border-gray-200">
                        <i class="fas fa-building text-2xl text-indigo-600"></i>
                        <h1 class="text-2xl font-bold text-gray-900">
                            {{ 'form.departement.title.edit'|trans }}
                        </h1>
                    </div>

                    {{ include('departement/_form.html.twig', {'button_label': 'form.button.update'|trans}) }}

                    <div class="mt-6 flex justify-between items-center pt-4 border-t border-gray-200">
                       
                        {{ include('departement/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            flatpickr('.js-datepicker', {
                dateFormat: 'Y-m-d\\TH:i',
                locale: 'fr',
                altInput: true,
                altFormat: 'j F Y H:i',
                monthSelectorType: 'static',
                time_24hr: true,
                enableTime: true
            });
        });
    </script>
    <script src="{{ asset('js/departement-form.js') }}"></script>
{% endblock %}
