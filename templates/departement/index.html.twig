{% extends 'base.html.twig' %}

{% block title %}Départements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.tailwind.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
    <style>
        .content-container {
            padding-right: 1rem;
            margin-left: 0;
        }
        .dataTables_wrapper {
            margin-left: 0;
        }
        @media (min-width: 1024px) {
            .main-content {
                margin-left: 0.5rem;
                max-width: 95%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="main-content">
        <div class="content-container">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="p-6">
                    <div class="flex justify-between items-center mb-6 pb-4 border-b border-gray-200">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-building text-2xl text-indigo-600"></i>
                            <h1 class="text-2xl font-bold text-gray-900">Départements</h1>
                        </div>
                        <a href="{{ path('app_departement_new') }}" 
                           class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg text-sm">
                            <i class="fas fa-plus mr-2"></i>
                            Ajouter
                        </a>
                    </div>

                    <div class="overflow-x-auto">
                        <table id="departements-table" class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom du Département</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date de Création</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                            {% for departement in departements %}
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        {{ departement.nomDepartement }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        {{ departement.dateCreation ? departement.dateCreation|date('d/m/Y') : '' }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="{{ path('app_departement_show', {'id': departement.id}) }}" 
                                           class="text-indigo-600 hover:text-indigo-900 mr-3" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_departement_edit', {'id': departement.id}) }}" 
                                           class="text-blue-600 hover:text-blue-900" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">
                                        Aucun département trouvé
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.tailwind.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#departements-table').DataTable({
                responsive: true,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                },
                dom: '<"flex justify-between items-center mb-4"lf>rt<"flex justify-between items-center mt-4"ip>',
                order: [[0, 'asc']],
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false
                    }
                ]
            });
        });
    </script>
{% endblock %}
