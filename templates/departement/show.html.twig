{% extends 'base.html.twig' %}

{% block title %}{{ departement.nomDepartement }} - Détails du département{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Layout */
        .container {
            @apply max-w-7xl mx-auto px-4 py-8;
        }

        /* Cards */
        .stat-card {
            @apply bg-white rounded-lg shadow-sm p-6 transition-all duration-200;
        }
        .stat-icon {
            @apply w-12 h-12 rounded-full flex items-center justify-center text-xl;
        }
        .content-card {
            @apply bg-white rounded-lg shadow-sm overflow-hidden mb-6;
        }
        .content-header {
            @apply p-6 border-b border-gray-100;
        }
        .content-body {
            @apply p-6;
        }

        /* Tables */
        .data-table {
            @apply min-w-full;
        }
        .data-table th {
            @apply px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50;
        }
        .data-table td {
            @apply px-6 py-4 text-sm text-gray-700 border-b border-gray-100;
        }
        .data-table tr:hover td {
            @apply bg-gray-50;
        }

        /* Status badges */
        .status-badge {
            @apply inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium;
        }
        .status-badge.pending {
            @apply bg-yellow-50 text-yellow-700;
        }
        .status-badge.success {
            @apply bg-green-50 text-green-700;
        }
        .status-badge.error {
            @apply bg-red-50 text-red-700;
        }
        .status-badge.info {
            @apply bg-blue-50 text-blue-700;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        {# En-tête du département #}
        <div class="bg-gradient-to-r from-indigo-500 to-indigo-600 rounded-lg shadow-sm p-6 mb-6 text-white">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-2xl font-bold">{{ departement.nomDepartement }}</h1>
                    <p class="mt-2 text-indigo-100">
                        <i class="far fa-calendar-alt mr-2"></i>
                        Créé le {{ departement.dateCreation|date('d/m/Y') }}
                    </p>
                </div>
                <div class="flex gap-3">
                    <a href="{{ path('app_departement_edit', {'id': departement.id}) }}" 
                       class="inline-flex items-center px-4 py-2 bg-white/10 hover:bg-white/20 text-white rounded-lg transition-colors duration-200">
                        <i class="fas fa-edit mr-2"></i>
                        Modifier
                    </a>
                    {{ include('departement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>

        {# Statistiques #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="stat-card">
                <div class="flex items-center">
                    <div class="stat-icon bg-blue-50 text-blue-500">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Professeurs</p>
                        <p class="text-2xl font-bold text-gray-900">{{ departement.professeurs|length }}</p>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center">
                    <div class="stat-icon bg-purple-50 text-purple-500">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Spécialités</p>
                        <p class="text-2xl font-bold text-gray-900">{{ departement.filiereCycles|length }}</p>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center">
                    <div class="stat-icon bg-amber-50 text-amber-500">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Chefs de département</p>
                        <p class="text-2xl font-bold text-gray-900">{{ departement.chefDepartements|length }}</p>
                    </div>
                </div>
            </div>

            <div class="stat-card">
                <div class="flex items-center">
                    <div class="stat-icon bg-emerald-50 text-emerald-500">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Inscriptions (Année active)</p>
                        {% set inscriptionsCount = 0 %}
                        {% for filiereCycle in departement.filiereCycles %}
                            {% for inscription in filiereCycle.inscriptions %}
                                {% if inscription.annee.isCurrent %}
                                    {% set inscriptionsCount = inscriptionsCount + 1 %}
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                        <p class="text-2xl font-bold text-gray-900">{{ inscriptionsCount }}</p>
                    </div>
                </div>
            </div>
        </div>

        {# Chefs de département #}
        <div class="content-card">
            <div class="content-header flex justify-between items-center">
                <div>
                    <h2 class="text-xl font-semibold text-gray-800">Chefs de département</h2>
                    <p class="mt-1 text-sm text-gray-500">Liste des chefs de département et leurs mandats</p>
                </div>
                <div>
                    <button class="px-4 py-2 bg-indigo-50 text-indigo-600 rounded-lg hover:bg-indigo-100 transition-colors duration-200">
                        <i class="fas fa-plus mr-2"></i>Ajouter
                    </button>
                </div>
            </div>
            <div class="p-6">
                <div class="overflow-x-auto">
                    <table class="data-table">
                        <thead>
                            <tr class="bg-gray-50 text-left">
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Date début mandat</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            {% for chef in departement.chefDepartements %}
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">{{ chef.professeur.nom }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ chef.professeur.prenom }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ chef.dateDebutMandat|date('d/m/Y') }}</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 text-right">
                                        <div class="flex justify-end space-x-3">
                                            <button class="text-indigo-600 hover:text-indigo-900" title="Voir les détails">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="text-blue-600 hover:text-blue-900" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="text-red-600 hover:text-red-900" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                                        Aucun chef de département enregistré
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Spécialités #}
        <div class="content-card">
            <div class="content-header flex justify-between items-center">
                <div>
                    <h2 class="text-xl font-semibold text-gray-800">Spécialités</h2>
                    <p class="mt-1 text-sm text-gray-500">Liste des spécialités du département</p>
                </div>
                <div>
                    <button class="px-4 py-2 bg-indigo-50 text-indigo-600 rounded-lg hover:bg-indigo-100 transition-colors duration-200">
                        <i class="fas fa-plus mr-2"></i>Ajouter
                    </button>
                </div>
            </div>
            <div class="p-6">
                <div class="overflow-x-auto">
                    <table class="data-table">
                        <thead>
                            <tr class="bg-gray-50 text-left">
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Filière</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Cycle</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Frais d'inscription</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider text-right">Inscrits</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            {% for filiere in departement.filiereCycles %}
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">
                                        {{ filiere.filiere.nomFiliere }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        {{ filiere.cycle.nomCycle }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        {{ filiere.fraisInscription|number_format(0, ',', ' ') }} FCFA
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-right">
                                        <span class="bg-indigo-50 text-indigo-700 py-1 px-2 rounded-full text-xs font-medium">
                                            {{ filiere.inscriptions|length }} étudiants
                                        </span>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                                        Aucune spécialité enregistrée
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Inscriptions #}
        <div class="content-card">
            <div class="content-header flex justify-between items-center">
                <div>
                    <h2 class="text-xl font-semibold text-gray-800">Inscriptions par année</h2>
                    <p class="mt-1 text-sm text-gray-500">Répartition des inscriptions par année académique</p>
                </div>
                <div>
                    <button class="px-4 py-2 bg-indigo-50 text-indigo-600 rounded-lg hover:bg-indigo-100 transition-colors duration-200">
                        <i class="fas fa-download mr-2"></i>Exporter
                    </button>
                </div>
            </div>
            <div class="p-6">
                <div class="overflow-x-auto">
                    <table class="data-table">
                        <thead>
                            <tr class="bg-gray-50 text-left">
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Année académique</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                <th class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider text-right">Nombre</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            {% set inscriptions = {} %}
                            {% set statuts = [
                                constant('App\\Enum\\StatutInscription::EN_ATTENTE'),
                                constant('App\\Enum\\StatutInscription::VALIDE'),
                                constant('App\\Enum\\StatutInscription::REJETE'),
                                constant('App\\Enum\\StatutInscription::TERMINE')
                            ] %}
                            
                            {% for filiereCycle in departement.filiereCycles %}
                                {% for inscription in filiereCycle.inscriptions %}
                                    {% set annee = inscription.annee.YearStart|date('Y') ~ '-' ~ inscription.annee.YearEnd|date('Y') %}
                                    {% if inscriptions[annee] is not defined %}
                                        {% set inscriptions = inscriptions|merge({
                                            (annee): {
                                                'periode': inscription.annee,
                                                'stats': {
                                                    (constant('App\\Enum\\StatutInscription::EN_ATTENTE').value): 0,
                                                    (constant('App\\Enum\\StatutInscription::VALIDE').value): 0,
                                                    (constant('App\\Enum\\StatutInscription::REJETE').value): 0,
                                                    (constant('App\\Enum\\StatutInscription::TERMINE').value): 0
                                                }
                                            }
                                        }) %}
                                    {% endif %}
                                    
                                    {% set currentStats = inscriptions[annee].stats %}
                                    {% set currentStats = currentStats|merge({
                                        (inscription.statut.value): currentStats[inscription.statut.value] + 1
                                    }) %}
                                    
                                    {% set inscriptions = inscriptions|merge({
                                        (annee): {
                                            'periode': inscription.annee,
                                            'stats': currentStats
                                        }
                                    }) %}
                                {% endfor %}
                            {% endfor %}

                            {% for annee, data in inscriptions %}
                                {% for statut in statuts %}
                                    <tr class="hover:bg-gray-50 transition-colors duration-200">
                                        {% if loop.first %}
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium border-r" rowspan="{{ statuts|length }}">
                                                {{ annee }}
                                                {% if data.periode.isCurrent %}
                                                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-50 text-green-700">
                                                        En cours
                                                    </span>
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                {% if statut.value == constant('App\\Enum\\StatutInscription::EN_ATTENTE').value %}
                                                    bg-yellow-50 text-yellow-700
                                                {% elseif statut.value == constant('App\\Enum\\StatutInscription::VALIDE').value %}
                                                    bg-green-50 text-green-700
                                                {% elseif statut.value == constant('App\\Enum\\StatutInscription::REJETE').value %}
                                                    bg-red-50 text-red-700
                                                {% else %}
                                                    bg-blue-50 text-blue-700
                                                {% endif %}
                                            ">
                                                {{ statut.value|trans }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium text-right">
                                            {{ data.stats[statut.value] }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="3" class="px-6 py-4 text-center text-gray-500">
                                        Aucune inscription enregistrée
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
