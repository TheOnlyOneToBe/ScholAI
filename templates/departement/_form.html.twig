{% form_theme form 'form/tailwind_layout.html.twig' %}

{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="space-y-6">
        {# Nom du département #}
        <div>
            {{ form_label(form.nomDepartement, 'form.departement.name'|trans, {
                'label_attr': {
                    'class': 'form-label block text-sm font-medium mb-1'
                }
            }) }}
            <div class="input-container">
                {{ form_widget(form.nomDepartement, {
                    'attr': {
                        'class': 'block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm transition-all duration-200',
                        'placeholder': 'form.departement.name_placeholder'|trans
                    }
                }) }}
            </div>
            {{ form_errors(form.nomDepartement, {'attr': {'class': 'form-error mt-1'}}) }}
        </div>

        {# Date de création #}
        <div>
            {{ form_label(form.dateCreation, 'form.departement.creation_date'|trans, {
                'label_attr': {
                    'class': 'form-label block text-sm font-medium mb-1'
                }
            }) }}
            <div class="date-input-container relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="far fa-calendar text-gray-400"></i>
                </div>
                {{ form_widget(form.dateCreation, {
                    'attr': {
                        'class': 'js-datepicker pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm transition-all duration-200',
                        'data-controller': 'datepicker'
                    }
                }) }}
            </div>
            {{ form_errors(form.dateCreation, {'attr': {'class': 'form-error mt-1'}}) }}
        </div>
    </div>

    <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
        <a href="{{ path('app_departement_index') }}" 
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
            <i class="fas fa-arrow-left mr-2"></i>{{ 'action.back'|trans }}
        </a>
        <button type="submit" 
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
            <i class="fas fa-save mr-2"></i>{{ 'action.save'|trans }}
        </button>
    </div>
{{ form_end(form) }}
