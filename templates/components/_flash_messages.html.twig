{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="rounded-md p-4 mb-4 alert-{{ label }}"
             x-data="{ show: true }"
             x-show="show"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0 transform scale-90"
             x-transition:enter-end="opacity-100 transform scale-100"
             x-transition:leave="transition ease-in duration-300"
             x-transition:leave-start="opacity-100 transform scale-100"
             x-transition:leave-end="opacity-0 transform scale-90">
            <div class="flex">
                <div class="flex-shrink-0">
                    {% if label == 'success' %}
                        <i class="fas fa-check-circle text-green-400"></i>
                    {% elseif label == 'error' %}
                        <i class="fas fa-exclamation-circle text-red-400"></i>
                    {% elseif label == 'warning' %}
                        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                    {% else %}
                        <i class="fas fa-info-circle text-blue-400"></i>
                    {% endif %}
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium {% if label == 'success' %}text-green-800{% elseif label == 'error' %}text-red-800{% elseif label == 'warning' %}text-yellow-800{% else %}text-blue-800{% endif %}">
                        {{ message }}
                    </p>
                </div>
                <div class="ml-auto pl-3">
                    <div class="mx-3 flex h-7">
                        <button @click="show = false" class="inline-flex text-gray-400 hover:text-gray-500">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
