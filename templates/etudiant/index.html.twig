{% extends 'base.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'core/css/datatable.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-semibold text-gray-900">Liste des étudiants
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    {{ etudiants|length }} étudiants
                </span>
            </h1>
            <a href="{{ path('app_etudiant_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <i class="fas fa-plus mr-2"></i>Nouvel étudiant
            </a>
        </div>

        <div class="bg-white shadow-md rounded-lg">
            <table id="students-table" class="min-w-full divide-y divide-gray-200">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for etudiant in etudiants %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ etudiant.noms }}</td>
                        <td>{{ etudiant.prenoms }}</td>
                        <td>{{ etudiant. ? etudiant.dateNaissance|date('d/m/Y') : '' }}</td>
                        <td>
                            <div class="action-buttons flex justify-end space-x-2">
                                <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}" class="text-indigo-600 hover:text-indigo-900">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}" class="text-green-600 hover:text-green-900">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'core/js/datatable.html.twig' %}
    <script>
        $(document).ready(function() {
            initDataTable('#students-table', {
                order: [[1, 'asc']], // Tri par défaut sur la colonne Nom
                initComplete: function() {
                    $('.dataTables_filter input').attr('placeholder', 'Rechercher un étudiant...');
                }
            });
        });
    </script>
{% endblock %}
