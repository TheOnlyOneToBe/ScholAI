{% extends 'base.html.twig' %}

{% block title %}Professeur index{% endblock %}

{% block body %}
    <h1>Professeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>NumeroTelephone</th>
                <th>Cni</th>
                <th>DateNaissance</th>
                <th>Nationalite</th>
                <th>Sexe</th>
                <th>Adresse</th>
                <th>PhotoProfil</th>
                <th>DateCreation</th>
                <th>DateModification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for professeur in professeurs %}
            <tr>
                <td>{{ professeur.id }}</td>
                <td>{{ professeur.nom }}</td>
                <td>{{ professeur.prenom }}</td>
                <td>{{ professeur.email }}</td>
                <td>{{ professeur.numeroTelephone }}</td>
                <td>{{ professeur.cni }}</td>
                <td>{{ professeur.dateNaissance ? professeur.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ professeur.nationalite }}</td>
                <td>{{ professeur.sexe }}</td>
                <td>{{ professeur.adresse }}</td>
                <td>{{ professeur.photoProfil }}</td>
                <td>{{ professeur.dateCreation ? professeur.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ professeur.dateModification ? professeur.dateModification|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_professeur_show', {'id': professeur.id}) }}">show</a>
                    <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_professeur_new') }}">Create new</a>
{% endblock %}
