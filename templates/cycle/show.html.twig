{% extends 'base.html.twig' %}

{% block title %}Détails du Cycle{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <div class="mb-6 flex justify-between items-center">
                <h1 class="text-3xl font-bold text-gray-800">Détails du Cycle</h1>
                <div class="flex space-x-2">
                    <a href="{{ path('app_cycle_edit', {'id': cycle.id}) }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-edit mr-2"></i>Modifier
                    </a>
                    <a href="{{ path('app_cycle_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-arrow-left mr-2"></i>Retour
                    </a>
                </div>
            </div>

            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <div class="p-6">
                    <div class="mb-6">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2">Informations du Cycle</h2>
                        <div class="bg-gray-50 p-4 rounded-lg">
                            <p class="text-sm text-gray-600">Libellé</p>
                            <p class="text-lg text-gray-900">{{ cycle.libelle }}</p>
                        </div>
                    </div>

                    <div>
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Filières associées</h2>
                        {% if cycle.filiereCycles|length > 0 %}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {% for filiereCycle in cycle.filiereCycles %}
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <h3 class="font-semibold text-gray-800">{{ filiereCycle.filiere.nomFiliere }}</h3>
                                        <p class="text-sm text-gray-600">
                                            {{ filiereCycle.filiere.departement.nomDepartement }}
                                        </p>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-gray-500 italic">Aucune filière associée à ce cycle</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            {{ include('cycle/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
