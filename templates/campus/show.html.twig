{% extends 'base.html.twig' %}

{% block title %}Détails du Campus{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <div class="mb-6 flex justify-between items-center">
                <h1 class="text-3xl font-bold text-gray-800">Détails du Campus</h1>
                <div class="flex space-x-2">
                    <a href="{{ path('app_campus_edit', {'id': campus.id}) }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-edit mr-2"></i>Modifier
                    </a>
                    <a href="{{ path('app_campus_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-arrow-left mr-2"></i>Retour
                    </a>
                </div>
            </div>

            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <div class="p-6">
                    <div class="mb-6">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2">Informations Générales</h2>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <p class="text-sm text-gray-600">Nom du Campus</p>
                                <p class="text-lg text-gray-900">{{ campus.nomCampus }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Adresse</p>
                                <p class="text-lg text-gray-900">{{ campus.adresse }}</p>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Salles de Cours</h2>
                        {% if campus.salles|length > 0 %}
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                {% for salle in campus.salles %}
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <h3 class="font-semibold text-gray-800">{{ salle.nomSalle }}</h3>
                                        <p class="text-sm text-gray-600">Capacité: {{ salle.capacite }} places</p>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-gray-500 italic">Aucune salle de cours enregistrée</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            {{ include('campus/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
