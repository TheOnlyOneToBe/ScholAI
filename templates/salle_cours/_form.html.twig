{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="grid grid-cols-1 gap-6">
        <div>
            {{ form_label(form.nomSalle, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.nomSalle, {'attr': {'class': 'mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.nomSalle, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.capacite, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.capacite, {'attr': {'class': 'mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md', 'min': '1'}}) }}
            {{ form_errors(form.capacite, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.campus, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.campus, {'attr': {'class': 'mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
            {{ form_errors(form.campus, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>
    </div>

    <div class="flex justify-end space-x-3 pt-5">
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
            <i class="fas fa-save mr-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
