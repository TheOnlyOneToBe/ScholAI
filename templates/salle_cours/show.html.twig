{% extends 'base.html.twig' %}

{% block title %}Détails de la Salle de Cours{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <div class="mb-6 flex justify-between items-center">
                <h1 class="text-3xl font-bold text-gray-800">Détails de la Salle</h1>
                <div class="flex space-x-2">
                    <a href="{{ path('app_salle_cours_edit', {'id': salle_cour.id}) }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-edit mr-2"></i>Modifier
                    </a>
                    <a href="{{ path('app_salle_cours_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                        <i class="fas fa-arrow-left mr-2"></i>Retour
                    </a>
                </div>
            </div>

            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <div class="p-6">
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <p class="text-sm text-gray-600">Nom de la Salle</p>
                            <p class="text-lg font-medium text-gray-900">{{ salle_cour.nomSalle }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Capacité</p>
                            <p class="text-lg font-medium text-gray-900">{{ salle_cour.capacite }} places</p>
                        </div>
                        <div class="col-span-2">
                            <p class="text-sm text-gray-600">Campus</p>
                            <p class="text-lg font-medium text-gray-900">{{ salle_cour.campus.nomCampus }}</p>
                            <p class="text-sm text-gray-500">{{ salle_cour.campus.adresse }}</p>
                        </div>
                    </div>

                    <div class="mt-8">
                        <h2 class="text-xl font-semibold text-gray-800 mb-4">Emplois du Temps</h2>
                        {% if salle_cour.emploiTemps|length > 0 %}
                            <div class="space-y-4">
                                {% for emploi in salle_cour.emploiTemps %}
                                    <div class="bg-gray-50 p-4 rounded-lg">
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <p class="font-medium text-gray-900">{{ emploi.matiere.nomMatiere }}</p>
                                                <p class="text-sm text-gray-600">{{ emploi.jour }} - {{ emploi.heureDebut|date('H:i') }} à {{ emploi.heureFin|date('H:i') }}</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-gray-500 italic">Aucun emploi du temps enregistré pour cette salle</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            {{ include('salle_cours/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
