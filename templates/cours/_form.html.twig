{% form_theme form 'form/tailwind_layout.html.twig' %}

{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    <div class="space-y-4">
        {# Nom du cours #}
        <div>
            {{ form_label(form.nomCours, null, {
                'label_attr': {
                    'class': 'form-label block text-sm font-semibold mb-2 text-gray-700'
                }
            }) }}
            {{ form_widget(form.nomCours, {
                'attr': {
                    'class': 'block w-full h-12 rounded-lg border-2 border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 text-base transition-all duration-200',
                    'placeholder': 'Entrez le nom du cours'
                }
            }) }}
            {{ form_errors(form.nomCours, {'attr': {'class': 'form-error mt-1 text-sm text-red-600'}}) }}
        </div>

        {# Type de cours #}
        <div>
            {{ form_label(form.typeCours, null, {
                'label_attr': {
                    'class': 'form-label block text-sm font-semibold mb-2 text-gray-700'
                }
            }) }}
            {{ form_widget(form.typeCours, {
                'attr': {
                    'class': 'block w-full h-12 rounded-lg border-2 border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 text-base transition-all duration-200'
                }
            }) }}
            {{ form_errors(form.typeCours, {'attr': {'class': 'form-error mt-1 text-sm text-red-600'}}) }}
        </div>

        {# Description #}
        <div>
            {{ form_label(form.descriptif, null, {
                'label_attr': {
                    'class': 'form-label block text-sm font-semibold mb-2 text-gray-700'
                }
            }) }}
            {{ form_widget(form.descriptif, {
                'attr': {
                    'class': 'block w-full rounded-lg border-2 border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 text-base transition-all duration-200',
                    'rows': '4',
                    'placeholder': 'Entrez une description du cours'
                }
            }) }}
            {{ form_errors(form.descriptif, {'attr': {'class': 'form-error mt-1 text-sm text-red-600'}}) }}
        </div>
    </div>

    <div class="flex justify-end space-x-3 pt-4 mt-4 border-t border-gray-200">
        <a href="{{ path('app_cours_index') }}" 
           class="inline-flex items-center px-6 py-3 text-base font-medium text-gray-700 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <i class="fas fa-arrow-left mr-2"></i>
            {{ 'action.cancel'|trans }}
        </a>
        <button type="submit" 
                class="inline-flex items-center px-6 py-3 text-base font-medium text-white bg-indigo-600 border border-transparent rounded-lg shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <i class="fas fa-save mr-2"></i>
            {{ 'action.save'|trans }}
        </button>
    </div>
{{ form_end(form) }}
