{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
        <div class="md:grid md:grid-cols-3 md:gap-6">
            <div class="md:col-span-1">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Informations de l'évaluation</h3>
                <p class="mt-1 text-sm text-gray-500">
                    Remplissez les informations concernant l'évaluation.
                </p>
            </div>
            <div class="mt-5 md:mt-0 md:col-span-2">
                <div class="grid grid-cols-6 gap-6">
                    <div class="col-span-6">
                        {{ form_row(form.titre) }}
                    </div>

                    <div class="col-span-6">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="col-span-6 sm:col-span-3">
                        {{ form_row(form.dateEvaluation) }}
                    </div>

                    <div class="col-span-6 sm:col-span-3">
                        {{ form_row(form.type) }}
                    </div>

                    <div class="col-span-6 sm:col-span-3">
                        {{ form_row(form.programme) }}
                    </div>

                    <div class="col-span-6 sm:col-span-3">
                        {{ form_row(form.semestre) }}
                    </div>

                    <div class="col-span-6 sm:col-span-3">
                        {{ form_row(form.coefficient) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="flex justify-end">
        <a href="{{ path('app_evaluation_index') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Annuler
        </a>
        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
