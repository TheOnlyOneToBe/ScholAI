{% extends 'base.html.twig' %}

{% block title %}Détails de l'Évaluation{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Détails de l'Évaluation</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">Informations détaillées sur l'évaluation</p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
                <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Titre</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ evaluation.titre }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Type</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ evaluation.type }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Date</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ evaluation.dateEvaluation|date('d/m/Y H:i') }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Coefficient</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ evaluation.coefficient }}</dd>
                    </div>
                    <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">Programme</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            {{ evaluation.programme.matiere.libelle }} - 
                            {{ evaluation.programme.filiereCycle.filiere.libelle }}
                        </dd>
                    </div>
                    <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">Description</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ evaluation.description }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Créé par</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ evaluation.createdBy }} le {{ evaluation.createdAt|date('d/m/Y H:i') }}</dd>
                    </div>
                    {% if evaluation.updatedBy %}
                        <div class="sm:col-span-1">
                            <dt class="text-sm font-medium text-gray-500">Dernière modification</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ evaluation.updatedBy }} le {{ evaluation.updatedAt|date('d/m/Y H:i') }}</dd>
                        </div>
                    {% endif %}
                </dl>
            </div>
        </div>

        <div class="mt-6 flex space-x-3">
            <a href="{{ path('app_evaluation_edit', {'id': evaluation.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Modifier
            </a>
            <a href="{{ path('app_note_by_evaluation', {'id': evaluation.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Voir les notes
            </a>
            <a href="{{ path('app_evaluation_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
