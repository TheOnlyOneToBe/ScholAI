{% extends 'base.html.twig' %}

{% block title %}Années Académiques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'core/css/datatables.css.twig' %}
    <style>
        {% include 'core/css/calendar.css.twig' %}
        {% include 'core/css/switch.css.twig' %}
    </style>
{% endblock %}

{% block body %}
    <div class="flex flex-col lg:ml-4 transition-all duration-300">
        <div class="container p-3">
            <div class="max-w-6xl mx-auto">
                <div class="bg-white shadow-lg rounded-lg p-4">
                    <div class="flex justify-between items-center mb-6 pb-4 border-b border-gray-200">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-calendar-alt text-2xl text-indigo-600"></i>
                            <h1 class="text-2xl font-bold text-gray-900">Années Académiques</h1>
                        </div>
                        <a href="{{ path('app_annee_academique_new') }}" 
                           class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg text-sm">
                            <i class="fas fa-plus mr-2"></i>
                            Ajouter
                        </a>
                    </div>

                    <div class="overflow-x-auto">
                        <table
                            id="data-tables" class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Année</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                            {% for annee_academique in annee_academiques %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <a href="{{ path('app_annee_academique_show', {'id': annee_academique.id}) }}" 
                                           class="hover:text-indigo-600 transition-colors duration-200">
                                            {{ annee_academique.YearStart ? annee_academique.YearStart|date('Y') : '' }} - {{ annee_academique.YearEnd ? annee_academique.YearEnd|date('Y') : '' }}
                                        </a>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <label class="switch" data-id="{{ annee_academique.id }}">
                                            <input type="checkbox" {% if annee_academique.isCurrent %}checked{% endif %}>
                                            <span class="slider"></span>
                                        </label>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex items-center justify-end space-x-3">
                                            <a href="{{ path('app_annee_academique_edit', {'id': annee_academique.id}) }}" 
                                               class="text-blue-600 hover:text-blue-900" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_annee_academique_delete', {'id': annee_academique.id}) }}" 
                                                  class="inline-block" 
                                                  onsubmit="return confirm('{{ 'message.confirm_delete'|trans }}');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annee_academique.id) }}">
                                                <button type="submit" class="text-red-600 hover:text-red-900" title="Supprimer">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'core/js/datatables.js.twig' %}
    <script>
        $(document).ready(function() {
            {% include 'core/js/datables.js.twig' %}
            {% include 'core/js/switch.js.twig' %}
        });
    </script>
{% endblock %}
