{% extends 'base.html.twig' %}

{% block title %}Années Académiques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.tailwind.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
    <style>
        .flatpickr-calendar {
            background: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border: 1px solid #e5e7eb;
        }
        
        /* Styles pour la pagination du DataTable */
        .dataTables_wrapper {
            margin-left: 0;
        }
        
        .dataTables_paginate {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .paginate_button {
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .paginate_button:hover {
            background-color: #f3f4f6;
        }
        
        .paginate_button.current {
            background-color: #4f46e5;
            color: white;
        }
        
        .paginate_button.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .dataTables_info {
            color: #6b7280;
        }
        
        /* Style pour le sélecteur d'entrées */
        .dataTables_length select {
            padding: 0.375rem 2.25rem 0.375rem 0.75rem;
            border-radius: 0.375rem;
            border-color: #e5e7eb;
            background-color: #fff;
            margin: 0 0.5rem;
        }
        
        /* Style pour la barre de recherche */
        .dataTables_filter input {
            padding: 0.375rem 0.75rem;
            border-radius: 0.375rem;
            border: 1px solid #e5e7eb;
            margin-left: 0.5rem;
        }

        /* Style pour le switch */
        .switch {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
        }
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #cbd5e0;
            transition: .4s;
            border-radius: 20px;
        }
        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        input:checked + .slider {
            background-color: #48bb78;
        }
        input:checked + .slider:before {
            transform: translateX(20px);
        }
        .switch.disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        .switch.disabled .slider {
            cursor: not-allowed;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="flex flex-col lg:ml-4 transition-all duration-300">
        <div class="container p-4">
            <div class="max-w-6xl mx-auto">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <div class="flex justify-between items-center mb-6 pb-4 border-b border-gray-200">
                        <div class="flex items-center space-x-3">
                            <i class="fas fa-calendar-alt text-2xl text-indigo-600"></i>
                            <h1 class="text-2xl font-bold text-gray-900">Années Académiques</h1>
                        </div>
                        <a href="{{ path('app_annee_academique_new') }}" 
                           class="inline-flex items-center px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg text-sm">
                            <i class="fas fa-plus mr-2"></i>
                            Ajouter
                        </a>
                    </div>

                    <div class="overflow-x-auto">
                        <table   widht="50%"
                            id="annees-table" class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Année</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                            {% for annee_academique in annee_academiques %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        {{ annee_academique.YearStart ? annee_academique.YearStart|date('Y') : '' }} - {{ annee_academique.YearEnd ? annee_academique.YearEnd|date('Y') : '' }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <label class="switch" data-id="{{ annee_academique.id }}">
                                            <input type="checkbox" {% if annee_academique.isCurrent %}checked{% endif %}>
                                            <span class="slider"></span>
                                        </label>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="{{ path('app_annee_academique_show', {'id': annee_academique.id}) }}" 
                                           class="text-indigo-600 hover:text-indigo-900 mr-3" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_annee_academique_edit', {'id': annee_academique.id}) }}" 
                                           class="text-blue-600 hover:text-blue-900" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.tailwind.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#annees-table').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                },
                dom: '<"flex justify-between items-center mb-4"lf>rt<"flex justify-between items-center mt-4"ip>',
                order: [[0, 'desc']],
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false
                    }
                ]
            });

            // Gestion des switches
            $('.switch input[type="checkbox"]').on('change', function(e) {
                const $switch = $(this).closest('.switch');
                const id = $switch.data('id');
                const $allSwitches = $('.switch');
                
                // Désactiver tous les switches pendant la requête
                $allSwitches.addClass('disabled');
                $allSwitches.find('input').prop('disabled', true);

                $.ajax({
                    url: '{{ path('app_annee_academique_toggle_status', {'id': 'ID'}) }}'.replace('ID', id),
                    method: 'POST',
                    headers: {
                        'X-CSRF-TOKEN': '{{ csrf_token('toggle-status') }}'
                    },
                    success: function(response) {
                        if (response.success) {
                            // Active le switch cliqué et désactive les autres
                            $allSwitches.find('input').prop('checked', false);
                            $switch.find('input').prop('checked', true);
                        }
                    },
                    error: function() {
                        // En cas d'erreur, recharger la page pour avoir l'état correct
                        window.location.reload();
                    },
                    complete: function() {
                        // Réactiver tous les switches
                        $allSwitches.removeClass('disabled');
                        $allSwitches.find('input').prop('disabled', false);
                    }
                });
            });
        });
    </script>
{% endblock %}
