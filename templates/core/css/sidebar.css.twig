<style>
    /* Sidebar styles */
    .sidebar {
        @apply fixed top-0 left-0 z-20 flex flex-col flex-shrink-0 hidden w-64 h-full pt-16 font-normal duration-200 lg:flex transition-all bg-white border-r border-gray-200 shadow-sm;
    }

    .sidebar-inner {
        @apply relative flex flex-col flex-1 min-h-0;
    }

    .sidebar-content {
        @apply flex flex-col flex-1 pt-5 pb-4 overflow-y-auto;
    }

    .sidebar-wrapper {
        @apply flex-1 px-3 space-y-4 divide-y divide-gray-200;
    }

    .sidebar-menu {
        @apply space-y-1;
    }

    .sidebar-item {
        @apply flex items-center p-2.5 text-sm font-medium text-gray-700 rounded-lg hover:bg-indigo-50 group transition-all duration-200;
    }

    .sidebar-icon {
        @apply w-5 h-5 text-gray-500 transition duration-75 group-hover:text-indigo-600;
    }

    .sidebar-text {
        @apply ml-3;
    }

    .sidebar-section {
        @apply pt-4;
    }

    .sidebar-section-header {
        @apply px-3;
    }

    .sidebar-section-title {
        @apply text-xs font-semibold text-gray-500 uppercase tracking-wider;
    }

    .sidebar-submenu {
        @apply pt-2 space-y-1;
    }

    /* Active state */
    .sidebar-item.active {
        @apply bg-indigo-50 text-indigo-600;
    }

    .sidebar-item.active .sidebar-icon {
        @apply text-indigo-600;
    }

    /* Hover effects */
    .sidebar-item:hover .sidebar-icon {
        @apply text-indigo-600;
    }

    /* Transition effects */
    .sidebar {
        transition: width 0.2s ease-in-out;
    }

    /* Scrollbar styling */
    .sidebar-content {
        scrollbar-width: thin;
        scrollbar-color: theme('colors.gray.300') theme('colors.gray.100');
    }

    .sidebar-content::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar-content::-webkit-scrollbar-track {
        background: theme('colors.gray.100');
    }

    .sidebar-content::-webkit-scrollbar-thumb {
        background-color: theme('colors.gray.300');
        border-radius: 3px;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .sidebar {
            @apply hidden transform -translate-x-full;
        }
        
        .sidebar.show {
            @apply block transform translate-x-0;
        }
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
